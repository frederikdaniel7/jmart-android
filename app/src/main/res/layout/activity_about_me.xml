<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      android:background="@drawable/backgroundshape"
      android:elevation="10dp"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/account_details"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="15dp" />
      </LinearLayout>

      <TextView
          android:id="@+id/nameAbt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          android:layout_weight="2"
          android:gravity="right"
          android:text="@string/name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="15dp" />
      </LinearLayout>

      <TextView
          android:id="@+id/emailAbt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          android:layout_weight="3"
          android:gravity="right"
          android:text="@string/email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textSize="15dp" />
      </LinearLayout>

      <TextView
          android:id="@+id/balanceAbt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          android:layout_weight="2"
          android:gravity="right"
          android:text="@string/balance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginVertical="10dp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_weight="4">

        <EditText
            android:id="@+id/editTopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Top Up Amount"
            android:textSize="15dp" />
      </LinearLayout>

      <Button
          android:id="@+id/TopUpBT"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:backgroundTint="#C1C1C1"
          android:text="TOP UP"
          android:textColor="@android:color/black"
          app:cornerRadius="2dp" />

    </LinearLayout>
    <Button
        android:id="@+id/AccountInvoiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Invoice"
        android:layout_gravity="center"
        android:backgroundTint="#C1C1C1"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/registerStoreBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER STORE"
        android:backgroundTint="#C1C1C1"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cornerRadius="1dp"/>

    <LinearLayout
        android:id="@+id/LLRegis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/backgroundshape"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Register Store"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/editName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:hint="@string/name"
          android:layout_marginBottom="10dp"/>

      <EditText
          android:id="@+id/editAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:hint="@string/address"
          android:layout_marginBottom="10dp"/>

      <EditText
          android:id="@+id/editPhone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:hint="@string/phone_number"
          android:layout_marginBottom="10dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="30dp"
          android:gravity="bottom"
          android:weightSum="2">

        <Button
            android:id="@+id/RegisterBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="@string/register"
            android:textColor="@android:color/black"
            app:cornerRadius="1dp"/>

        <Button
            android:id="@+id/cancelBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="CANCEL"
            android:textColor="@android:color/black"
            app:cornerRadius="1dp"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/backgroundshape"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Store"
          android:textSize="20dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/name"
              android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="Ramdan Berkah Jaya" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/address"
              android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="Jalan Akses UI no. 69" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/phone_number"
              android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shopphonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="18012931293" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:gravity="center"
          >
        <Button
            android:id="@+id/buttonInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="#C1C1C1"
            android:text="INVOICE"
            android:textColor="@android:color/black"
            app:cornerRadius="1dp"
          />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>